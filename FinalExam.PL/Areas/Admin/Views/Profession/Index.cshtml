@model IEnumerable<ProfessionListItemDTO>

<!-- Begin Page Content -->
<div class="container-fluid">
	<div class="card shadow mb-4">
		<div class="card-header d-flex justify-content-between align-items-center py-3">
			<h6 class="m-0 font-weight-bold text-primary">Professions</h6>
			<a class="btn btn-primary" style="width: 160px" asp-controller="Profession" asp-action="Create">+ Add Profession</a>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th width="300px">Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (ProfessionListItemDTO profession in Model)
						{
						<tr>
							<td>@profession.Id</td>
							<td>@profession.Title</td>
							<td class="d-flex justify-content-around">
								<a class="btn btn-primary" asp-controller="Profession" asp-action="Update" asp-route-id="@profession.Id">Update</a>
								<a class="btn btn-danger" asp-controller="Profession" asp-action="Delete" asp-route-id="@profession.Id">Delete</a>
								<a class="btn btn-info" asp-controller="Profession" asp-action="Details" asp-route-id="@profession.Id">Details</a>
							</td>
						</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<!-- /.container-fluid -->